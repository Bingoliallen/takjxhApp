<resources>

  <!-- base dialog -->
  <!-- 对话框淡入淡出动画 -->
  <style name="anim_base_dialog_fade">
    <item name="android:windowEnterAnimation">@anim/common_base_dialog_fade_in</item>
    <item name="android:windowExitAnimation">@anim/common_base_dialog_fade_out</item>
  </style>
  <!-- 对话框底部进出动画 -->
  <style name="anim_base_dialog_slide_at_bottom">
    <item name="android:windowEnterAnimation">@anim/common_base_dialog_slide_in_at_bottom</item>
    <item name="android:windowExitAnimation">@anim/common_base_dialog_slide_out_at_bottom</item>
  </style>
  <!-- 对话框顶部进出动画 -->
  <style name="anim_base_dialog_slide_at_top">
    <item name="android:windowEnterAnimation">@anim/common_base_dialog_slide_in_at_top</item>
    <item name="android:windowExitAnimation">@anim/common_base_dialog_slide_out_at_top</item>
  </style>

  <!-- 菊花加载控件 -->
  <style name="ACPLDialog">
    <!--这个说明提示框是否有边框-->
    <item name="android:windowFrame">@null</item>
    <!--这个说明提示框是否有标题-->
    <item name="android:windowNoTitle">true</item>
    <!--这个说明提示框是否是浮动的-->
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="TitleBarView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:paddingLeft">15dp</item>
    <item name="android:paddingRight">15dp</item>
    <!--<item name="android:background">@drawable/title_bar_view_bg</item>-->
  </style>

