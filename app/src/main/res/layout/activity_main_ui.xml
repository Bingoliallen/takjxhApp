<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false">

    <FrameLayout
        android:id="@+id/fl_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"
        android:background="@color/black_bg" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/ll_bottom"
        android:background="@color/line" />


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/all_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iv_home_press"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/zf_p"
                android:visibility="gone" />

            <TextView
                android:id="@+id/iv_home_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/zf" />

            <TextView
                android:id="@+id/tv_home_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="政府"
                android:textColor="@color/main_color"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_home_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="政府"
                android:textColor="@color/common_app_text_theme4"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/all_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iv_fishpond_press"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/qy_p"
                android:visibility="gone" />

            <TextView
                android:id="@+id/iv_fishpond_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/qy" />

            <TextView
                android:id="@+id/tv_fishpond_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业"
                android:textColor="@color/common_app_text_theme4"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_fishpond_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="企业"
                android:textColor="@color/main_color"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlAddDevices"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom">

            <LinearLayout
                android:id="@+id/tvNull"
                android:layout_centerInParent="true"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/login_ed_shape">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/zy" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvtvNull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNull"
                android:layout_centerInParent="true"
                android:layout_marginBottom="2dp"
                android:padding="0dp"
                android:text="首页"
                android:textColor="@color/common_app_text_theme4"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvtvNull1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNull"
                android:layout_centerInParent="true"
                android:layout_marginBottom="2dp"
                android:padding="0dp"
                android:text="首页"
                android:textColor="@color/main_color"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/all_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iv_message_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/gr" />

            <TextView
                android:id="@+id/iv_message_press"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/gr_p"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_message_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人"
                android:textColor="@color/common_app_text_theme4"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_message_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人"
                android:textColor="@color/main_color"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/all_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iv_mine_press"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/wd_p"
                android:visibility="gone" />

            <TextView
                android:id="@+id/iv_mine_normal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/wd" />


            <TextView
                android:id="@+id/tv_mine_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@color/common_app_text_theme4"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mine_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@color/main_color"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>