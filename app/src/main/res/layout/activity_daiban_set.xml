<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_app_theme_bg1"
    android:orientation="vertical">

    <takjxh.android.com.taapp.view.NormalTitleBar
        android:id="@+id/ntb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/daibanset" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="待办中心"
                android:textColor="@color/common_app_text_theme1"
                android:textSize="22sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="待办中心为你提供预警待办重要提醒通知"
                android:textColor="@color/common_app_text_theme3"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>
     <TextView
         android:id="@+id/tv_del"
         android:layout_marginTop="20dp"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:gravity="center"
         android:background="@color/white"
         android:text="删除全部消息"
         android:textSize="18sp"
         android:textColor="@color/common_app_text_theme7"/>

</LinearLayout>
