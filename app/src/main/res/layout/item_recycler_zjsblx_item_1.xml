<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgbt"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/icon_bitian" />


                <TextView
                    android:id="@+id/tvName"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="申报企业（个人）名称："
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

               <!-- <takjxh.android.com.taapp.view.CustomSpinner
                    android:id="@+id/sp_register0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog"
                    android:visibility="gone" />-->

                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bt_danxuankaung" />-->

                <EditText
                    android:id="@+id/tv_GSMC"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="43dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="请输入"
                    android:paddingLeft="12dp"
                    android:singleLine="true"
                    android:textColor="@color/common_app_text_theme4"
                    android:textColorHint="@color/common_app_text_theme5" />

            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="0dp"
            android:background="@color/line" />
    </LinearLayout>




</LinearLayout>
