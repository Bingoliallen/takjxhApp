<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <takjxh.android.com.taapp.view.NormalTitleBar
        android:id="@+id/ntb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ml4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="0.5"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical|right"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="6dp"
                       android:layout_height="6dp"
                       android:layout_marginLeft="0dp"
                       android:src="@drawable/icon_bitian" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="5dp"
                       android:text="报名项目："
                       android:textColor="@color/common_app_text_theme1"
                       android:textSize="16sp" />
               </LinearLayout>



                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="15dp">

                    <takjxh.android.com.taapp.view.CustomSpinner
                        android:id="@+id/sp_register1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dialog" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bt_danxuankaung" />

                    <TextView
                        android:id="@+id/tv_czjg"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="30dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请选择您的报名项目"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:spinnerMode="dialog"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/common_app_text_theme2"
                        android:textSize="14sp" />

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ml1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">
                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/icon_bitian"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="报名描述："
                        android:textColor="@color/common_app_text_theme1"
                        android:textSize="16sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="15dp">


                        <TextView
                            android:id="@+id/tv_ms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="0dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:paddingBottom="10dp"
                            android:spinnerMode="dialog"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/common_app_text_theme2"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">
                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/icon_bitian"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="报名价格："
                        android:textColor="@color/common_app_text_theme1"
                        android:textSize="16sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="15dp">


                        <TextView
                            android:id="@+id/tv_jg"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="0dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="0dp"
                            android:singleLine="true"
                            android:spinnerMode="dialog"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/common_app_text_theme2"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:gravity="right"
                        android:orientation="horizontal">
                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/icon_bitian"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:gravity="center_vertical|right"
                        android:text="报名开始时间"
                        android:textColor="@color/common_app_text_theme1"
                        android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:gravity="center"
                            android:text="："
                            android:textColor="@color/common_app_text_theme1"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="15dp">


                        <TextView
                            android:id="@+id/tv_st"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="0dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="0dp"
                            android:singleLine="true"
                            android:spinnerMode="dialog"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/common_app_text_theme2"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">
                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/icon_bitian"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:gravity="center_vertical|right"
                        android:text="报名结束时间"
                        android:textColor="@color/common_app_text_theme1"
                        android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:text="："
                            android:textColor="@color/common_app_text_theme1"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="15dp">


                        <TextView
                            android:id="@+id/tv_et"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="0dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="0dp"
                            android:singleLine="true"
                            android:spinnerMode="dialog"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/common_app_text_theme2"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">
                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/icon_bitian"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="报名附件："
                        android:textColor="@color/common_app_text_theme1"
                        android:textSize="16sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="15dp">


                        <TextView
                            android:id="@+id/tv_fj"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="0dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="0dp"
                            android:singleLine="true"
                            android:spinnerMode="dialog"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/common_app_text_theme2"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="55dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_clue_commit"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_login_btn"
                        android:text="马上报名"
                        android:textColor="@color/white"
                        android:textSize="17sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ml2"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginLeft="0dp"
                            android:src="@drawable/icon_bitian" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="您的姓名："
                            android:textColor="@color/common_app_text_theme1"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <EditText
                        android:id="@+id/clue_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/selector_common_ed"
                        android:gravity="center_vertical"
                        android:hint="请输入您的姓名"
                        android:maxLength="20"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/common_app_text_theme2"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginLeft="0dp"
                            android:src="@drawable/icon_bitian" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="手机号码："
                            android:textColor="@color/common_app_text_theme1"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <EditText
                        android:id="@+id/clue_tel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/selector_common_ed"
                        android:gravity="center_vertical"
                        android:hint="请输入您的手机号码"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/common_app_text_theme2"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginLeft="0dp"
                            android:src="@drawable/icon_bitian" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="公司名称："
                            android:textColor="@color/common_app_text_theme1"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <EditText
                        android:id="@+id/clue_gsmc"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/selector_common_ed"
                        android:gravity="center_vertical"
                        android:hint="请输入公司名称"
                        android:maxLength="20"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/common_app_text_theme2"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">
                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/icon_bitian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="是否发票："
                        android:textColor="@color/common_app_text_theme1"
                        android:textSize="16sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="15dp">

                        <takjxh.android.com.taapp.view.CustomSpinner
                            android:id="@+id/sp_register2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:spinnerMode="dialog" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bt_danxuankaung" />

                        <TextView
                            android:id="@+id/tv_sffp"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="30dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="请选择是否需要发票"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:spinnerMode="dialog"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/common_app_text_theme2"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ml3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal">
                        <ImageView
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginLeft="0dp"
                            android:src="@drawable/icon_bitian" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="开票类型："
                            android:textColor="@color/common_app_text_theme1"
                            android:textSize="16sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="15dp">

                            <takjxh.android.com.taapp.view.CustomSpinner
                                android:id="@+id/sp_register3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:spinnerMode="dialog" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bt_danxuankaung" />

                            <TextView
                                android:id="@+id/tv_kplx"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="30dp"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:hint="请选择"
                                android:paddingLeft="15dp"
                                android:singleLine="true"
                                android:spinnerMode="dialog"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/common_app_text_theme2"
                                android:textSize="14sp" />

                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/icon_bitian" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:layout_marginLeft="2dp"
                                android:text="组织机构代码"
                                android:textColor="@color/common_app_text_theme1"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="："
                                android:textColor="@color/common_app_text_theme1"
                                android:textSize="16sp" />
                        </LinearLayout>


                        <EditText
                            android:id="@+id/clue_zzjgdm"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/selector_common_ed"
                            android:gravity="center_vertical"
                            android:hint="请输入组织机构代码"
                            android:maxLength="20"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/common_app_text_theme2"
                            android:textSize="14sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
