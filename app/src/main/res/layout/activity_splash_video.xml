<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <takjxh.android.com.taapp.view.CustomVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <takjxh.android.com.taapp.view.CountDownViewT
        android:id="@+id/cdv_time"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="15dp"
        app:cd_animator_time="5"
        app:cd_animator_time_unit="s"
        app:cd_arc_color="@color/main_color"
        app:cd_arc_width="2dp"
        app:cd_bg_color="@color/alpha_10_black"
        app:cd_circle_radius="25dp"
        app:cd_location="top"
        app:cd_retreat_type="forward"
        app:cd_text_color="@color/main_color"
        app:cd_text_size="11sp" />

</RelativeLayout>
