<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgbt"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/icon_bitian" />


                <TextView
                    android:id="@+id/tvName"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="附件上传："
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/edSCFJ"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_login_btn"
                android:gravity="center"
                android:hint="上传附件"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/edSCFJ1"
                android:visibility="gone"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/main_tiime_shape1"
                android:gravity="center"
                android:hint="模板下载"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_Mark"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:hint="每个附件只能上传单个文件，重新上传后，会覆盖原文件"
            android:paddingLeft="20dp"
            android:textColor="@color/common_app_text_theme4"
            android:textColorHint="@color/common_app_text_theme5" />
        <takjxh.android.com.taapp.view.CustomGridView
            android:id="@+id/noScrollgridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:horizontalSpacing="5dp"
            android:numColumns="1"
            android:paddingBottom="10dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="10dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="0dp"
            android:background="@color/line" />
    </LinearLayout>


</LinearLayout>
